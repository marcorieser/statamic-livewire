{
    "name": "marcorieser/statamic-livewire",
    "description": "A Laravel Livewire integration for Statamics Antlers engine.",
    "keywords": [
        "Statamic",
        "Addon",
        "Laravel",
        "Livewire"
    ],
    "license": "MIT",
    "type": "statamic-addon",
    "autoload": {
        "psr-4": {
            "MarcoRieser\\Livewire\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MarcoRieser\\Livewire\\Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "Marco Rieser",
            "homepage": "https://rieser.dev"
        },
        {
            "name": "Jonas Siewertsen",
            "homepage": "https://jonassiewertsen.com"
        }
    ],
    "support": {
        "issues": "https://github.com/marcorieser/statamic-livewire/issues",
        "docs": "https://github.com/marcorieser/statamic-livewire"
    },
    "require": {
        "php": "^8.2",
        "statamic/cms": "^5.17.0",
        "livewire/livewire": "^3.0"
    },
    "extra": {
        "statamic": {
            "name": "Livewire",
            "description": "A Laravel Livewire integration for Statamics Antlers engine"
        },
        "laravel": {
            "providers": [
                "MarcoRieser\\Livewire\\ServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true
        }
    },
    "require-dev": {
        "laravel/pint": "^1.21",
        "orchestra/testbench": "^9.0 || ^10.0",
        "phpunit/phpunit": "^10.5|^11.0",
        "spatie/laravel-ray": "^1.0"
    }
}
